<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Scatch</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] bg-white text-black">
  <!-- Navbar -->
  <nav class="w-full fixed top-0 left-0 z-50 bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-5 py-4 flex items-center justify-between">
      <!-- Brand -->
      <div class="text-2xl font-bold tracking-wide">Shop!</div>

      <!-- Menu (desktop) -->
      <div class="hidden md:flex items-center gap-6 text-sm font-medium">
        <a href="#" class="hover:text-gray-600 transition">Home</a>
        <a href="#" class="hover:text-gray-600 transition">Shop</a>
        <a href="#" class="hover:text-gray-600 transition">About</a>
        <a href="#" class="hover:text-gray-600 transition">Contact</a>
      </div>

      <!-- Right Icons -->
      <div class="flex items-center gap-4">
        <!-- Search -->
        <div class="relative hidden sm:block">
          <input type="text" placeholder="Search" class="px-3 py-1.5 rounded-md border text-sm focus:outline-none focus:ring-2 focus:ring-black" />
          <i class="ri-search-line absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 text-sm"></i>
        </div>

        <!-- Icons -->
        <a href="#" class="text-xl hover:text-gray-600 transition"><i class="ri-user-line"></i></a>
        <a href="#" class="text-xl hover:text-gray-600 transition"><i class="ri-shopping-cart-line"></i></a>

        <!-- Hamburger (mobile) -->
        <div class="md:hidden text-2xl">
          <i class="ri-menu-line"></i>
        </div>
      </div>
    </div>
  </nav>

  <!-- Padding to prevent content behind navbar -->
  <div class="pt-20"></div>
</body>

</html>
