<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shop Navbar</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] bg-white">

  <!-- Navbar -->
  <nav class="w-full fixed top-0 left-0 z-50 bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center font-['helvetica_now_display']">

      <!-- Brand -->
      <a href="/" class="text-2xl md:text-3xl font-extrabold bg-gradient-to-r from-purple-600 via-indigo-600 to-blue-500 text-transparent bg-clip-text">
        Shop!
      </a>

      <!-- Desktop Menu -->
      <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
      <% if(loggedin) { %>
      <div class="hidden md:flex gap-6 items-center text-gray-700 font-medium text-lg">
        <a href="/shop" class="hover:text-purple-600 transition">Shop</a>
        <a href="/cart" class="hover:text-purple-600 transition">Cart</a>
        <a href="#" class="hover:text-purple-600 transition">My Account</a>
        <a href="/users/logout" class="text-red-500 hover:text-red-700 transition">Logout</a>
      </div>
      <% } %>

      <!-- Mobile Menu Button -->
      <button id="menuToggle" class="md:hidden text-3xl text-gray-700 focus:outline-none">
        <i class="ri-menu-3-line" id="menuIcon"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <% if(loggedin) { %>
    <div id="mobileMenu" class="md:hidden hidden flex flex-col gap-4 px-6 py-4 bg-white shadow-md text-lg font-medium text-gray-700">
      <a href="/shop" class="hover:text-purple-600 transition">Shop</a>
      <a href="/cart" class="hover:text-purple-600 transition">Cart</a>
      <a href="#" class="hover:text-purple-600 transition">My Account</a>
      <a href="/users/logout" class="text-red-500 hover:text-red-700 transition">Logout</a>
    </div>
    <% } %>
  </nav>

  <!-- Spacer to prevent content from hiding under navbar -->
  <div class="h-[80px]"></div>

  <!-- Navbar Toggle Script -->
  <script>
    const menuToggle = document.getElementById("menuToggle");
    const mobileMenu = document.getElementById("mobileMenu");
    const menuIcon = document.getElementById("menuIcon");

    menuToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
      menuIcon.classList.toggle("ri-menu-3-line");
      menuIcon.classList.toggle("ri-close-line");
    });
  </script>
</body>
</html>
