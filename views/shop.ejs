
<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col lg:flex-row gap-8 px-6 md:px-12 py-10 bg-white text-black">
  
  <!-- Sidebar -->
  <div class="lg:w-1/4 w-full flex flex-col">
    <!-- Sort By -->
    <div class="flex items-center gap-2 mb-6">
      <h3 class="text-lg font-semibold">Sort by:</h3>
      <form action="/shop">
        <select class="border px-3 py-1 rounded-md text-sm" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <!-- Categories -->
    <div class="flex flex-col space-y-2 mt-4">
      <h4 class="text-md font-medium text-gray-800 mb-1">Categories</h4>
      <a class="text-sm hover:underline" href="#">New Collection</a>
      <a class="text-sm hover:underline" href="#">All Products</a>
      <a class="text-sm hover:underline" href="#">Discounted Products</a>
    </div>

    <!-- Filters -->
    <div class="mt-10 flex flex-col space-y-2">
      <h4 class="text-md font-medium text-gray-800 mb-1">Filter by:</h4>
      <a class="text-sm hover:underline" href="#">Availability</a>
      <a class="text-sm hover:underline" href="#">Discount</a>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="lg:w-3/4 w-full">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-6">
      <% products.forEach(function(product){ %>
      <div class="rounded-lg overflow-hidden border hover:shadow-md transition-shadow duration-300">
        <!-- Product Image -->
        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
          <img class="h-[10rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
        </div>
        
        <!-- Product Info -->
        <div class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
          <div>
            <h3 class="font-semibold text-md"><%= product.name %></h3>
            <h4 class="text-sm">â‚¹ <%= product.price %></h4>
          </div>
          <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-gray-200 transition" href="#">
            <i class="ri-add-line text-black text-xl"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
